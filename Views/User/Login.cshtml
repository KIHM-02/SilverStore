@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Login</title>
	<link rel="stylesheet" href ="~/css/propiedades.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/credenciales.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/SilverStore.style.css" />
</head>

<body>
	<section class="container">
		<h1>Login</h1>
		<form method="post">
			<div>
				<label for="username">Nombre de usuario:</label>
				<input type="text" id="username" name="username" required />
			</div>
			<div>
				<label for="password">Contraseña:</label>
				<input type="password" id="password" name="password" required />
			</div>
			<div>
				<button type="submit">Login</button>
			</div>
			<div class="error-message">
				<!-- Error messages will be displayed here -->
			</div>
		</form>

		<div class="links">
			<a asp-controller="User" asp-action="Register">Registrarse</a>
			<a href="/forgot-password">Olvidaste tu contraseña?</a>
		</div>

	</section>
</body>
</html>